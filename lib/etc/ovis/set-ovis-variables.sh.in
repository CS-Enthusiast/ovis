#!/bin/bash
export OVIS_HOME=@prefix@
export OVIS_RUN_CONF=$OVIS_HOME/conf/ovis_conf.db
export OVIS_WEB_ROOT=/var/www/tahoma-test/
export OVIS_DATA=/home/ovis-data
export OVIS_LOG=$OVIS_HOME/var/log
export OVIS_SOCK=$OVIS_HOME/var/sock

# *_RECOVER choices are "restore" or "reinit"
export LDMSD_STORE_RECOVER=restore
export KOMONDOR_STORE_RECOVER=restore

OLIB=$OVIS_HOME/lib
export LDMSD_PLUGIN_LIBPATH=$OLIB
export LDMS_XPRT_LIBPATH=$OLIB
export ZAP_LIBPATH=$OLIB
export ME_PLUGIN_LIBPATH=$OLIB/me

export PYTHONPATH=$PYTHONPATH:$OVIS_HOME/lib/python@PYTHON_VERSION@/site-packages
export PATH=$PATH:$OVIS_HOME/bin:$OVIS_HOME/sbin

export LDMSD_SAMPLER_XPORT=sock
export LDMSD_SAMPLER_PORT_TO_OCMD=20001
export LDMSD_SAMPLER_PORT_LISTEN=10001

export OCMD_XPORT=sock
export OCMD_PORT=12345
export OCMD_PEER_LIST=$OVIS_HOME/etc/ocmd_peer_list
export OCMD_RECONNECT_INTERVAL=20.00

export ME_XPORT=sock
export ME_PORT_TO_OCMD=20003
export ME_PORT_LISTEN=10003

export KOMONDOR_XPORT=sock
export KOMONDOR_PORT_TO_OCMD=20004
export KOMONDOR_PORT_LISTEN=10004

export LDMSD_AGG_XPORT=sock
export LDMSD_AGG_PORT_TO_OCMD=20002
export LDMSD_AGG_PORT_LISTEN=10002
export LDMSD_AGG_MEM="2G"
export LDMSD_AGG_SOS=$OVIS_DATA/metrics

export BALER_XPORT=sock
export BALER_PORT_TO_OCMD=20005
export BALER_STORE=$OVIS_DATA/baler

ulimit -c unlimited
