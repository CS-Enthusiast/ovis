#/bin/bash

cd /projects/ldms/LDMS/
make clean
export CFLAGS=-g
export LDFLAGS=-L/projects/ldms/libs/cn/libevent-1.4_build/lib
export CPPFLAGS=-I/projects/ldms/libs/cn/libevent-1.4_build/include

./autogen.sh
mkdir -p m4
./configure --prefix=/projects/ldms/ldms.usr.cn --disable-rdma --disable-mmap --disable-papi
make
make install
mkdir /projects/ldms/ldms.usr.cn/logs

